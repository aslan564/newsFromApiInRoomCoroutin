<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D1D1D1"
    android:layout_margin="3sp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNewsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="@string/news_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFrNewsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/news_category"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/tvNewsName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNewsName"
        app:layout_constraintTop_toTopOf="@+id/tvNewsName" />
</androidx.constraintlayout.widget.ConstraintLayout>